= simple_form_for @item, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :description
  = f.error_span :description
  = f.input :price, label: 'Price, $'
  = f.error_span :price
  = f.association :category
  = f.simple_fields_for :photos do |p|
    = render 'photo_fields', :f => p
  .links
    = link_to_add_association 'add photo', f, :photos
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), items_path, :class => 'btn btn-default'
